.ssw-faveiticon {
  z-index: 999;
}

.shopify-product-form .btn-wrap {
  display: flex;
  flex-direction: column
}

#widget-fave-html {
  width: 100%;
  margin-left: 0;
}

#widget-fave-html .ssw-fave-btn {
  width: 100%;
  line-height: 36px;
  margin-top: 10px;
}

#widget-fave-html .ssw-fave-btn-content {
  width: 100%;
  color: #e8e0cd;
  background-color: #438871;
  font-family: "Gothic Medium", sans-serif;
  font-size: 11px;
  border-radius: 0;
}

#widget-fave-html .ssw-icon-heart-o,
#widget-fave-html .ssw-icon-heart {
  color: #e8e0cd;
}

#widget-fave-html .ssw-fave-btn-counter,
#widget-fave-html .ssw-fave-btn-counter:before {
  color: #e8e0cd;
  background-color: #438871;
  border-radius: 0;
}

#widget-fave-html:hover .ssw-fave-btn-content,
#widget-fave-html:hover .ssw-fave-btn-counter,
#widget-fave-html:hover .ssw-fave-btn-counter:before {
  background-color: #396a5a;
}

.ssw-modal input[type="text"],
.ssw-modal input[type="email"],
.ssw-modal input[type="number"],
.ssw-modal input[type="password"] {
  padding: 8px 16px !important;
  border: 1px solid silver !important;
  outline: none !important;
}

#ssw-page {
  padding: 30px;
}

#ssw-page .ssw-nav > li.ssw-active > a {
  padding-bottom: 5px;
}

#ssw-page .ssw-edit-profile-page h2 {
  line-height: 20px;
}

.ssw-dropdown-toggle {
  font-size: 20px;
  padding: 10px;
  position: relative;
  top: 10px;
  color: #000;
}

.ssw-dropdown-toggle:hover {
  color: #438871;
}

@media all and (min-width: 992px) {
  .ssw-dropdown-menu {
    top: 70px;
    right: 30px;
  }
}

@media all and (max-width: 991px) {
  .ssw-dropdown-menu li a {
    color: #000 !important;
  }
  
  .ssw-tprofile {
    margin-bottom: 20px;
  }
}