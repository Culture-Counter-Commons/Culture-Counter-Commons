{% unless settings.catalog_mode %}
{% if section.settings.login_box %}


{% capture the_snippet_auth %}{% render 'socialshopwave-widget-auth' %}{% endcapture %}
{% if the_snippet_auth contains 'Liquid error' %}

{% if customer %}
<div class="dropdn dropdn_account {% if onlytext == 1 %}only-text{% endif %} {{ classes }}">
  <a href="#" class="dropdn-link"><i class="icon icon-person"></i></a>
  {% comment %}
  <span>{{ 'customer.account.title' | t }}</span>
  {% endcomment %}
  <div class="dropdn-content">
    <div class="container">
      <div class="dropdn-close">CLOSE</div>
      <ul>
        <li><a href="/account"><i class="icon icon-person-fill"></i></a></li>
        {% comment %}
        <span>{{ 'general.theme.profile' | t }}</span>
        {% endcomment %}
        <li><a href="/account/logout"><i class="icon icon-return"></i></a></li>
        {% comment %}
        <span>{{ 'layout.customer.log_out' | t }}</span>
        {% endcomment %}
      </ul>
    </div>
  </div>
</div>
{% else %}
<div class="dropdn dropdn_account {% if onlytext == 1 %}only-text{% endif %}  {{ classes }}">
  <a href="#" class="dropdn-link"><i class="icon icon-person"></i></a>
  {% comment %}
  <span>{{ 'customer.account.title' | t }}</span>
  {% endcomment %}
  <div class="dropdn-content">
    <div class="container">
      <div class="dropdn-close">CLOSE</div>
      <ul>
        <li><a href="/account"><i class="icon icon-person-fill"></i><span>{{ 'customer.account.title' | t }}</span></a></li>
        <li><a href="/account"><i class="icon icon-lock"></i><span>{{ 'layout.customer.log_in' | t }}</span></a></li>
        <li><a href="/account/register"><i class="icon icon-person-fill-add"></i><span>{{ 'general.theme.register' | t }}</span></a></li>
        <li><a href="/cart"><i class="icon icon-handbag"></i><span>{{ 'general.theme.checkout' | t }}</span></a></li>
      </ul>
    </div>
  </div>
</div>
{% endif %}
{% else %}
{% if shop.customer_accounts_enabled %}
{% if customer %}
<li class="ssw-tprofile ssw-dropdown dropdn dropdn_account {% if onlytext == 1 %}only-text{% endif %} {{ classes }}">
  <a class="ssw-dropdown-toggle" data-toggle="ssw-dropdown" href="javascript:void(0);">
    <i class="icon icon-person"></i>
  </a>
  <ul class="ssw-dropdown-menu" role="menu" aria-labelledby="dLabel">
    <li id="customer_myorders_li"><a tabindex="-1" href="account">{{ 'socialshopwave.my_orders' | t }}</a></li>
    {% render 'ssw-widget-dropdown' %}
    <li class="ssw-divider"></li>
    <li><a id="customer_logout_link" tabindex="-1" href="account/logout">{{ 'socialshopwave.logout' | t }}</a></li>
  </ul>
</li>
  {% else %}
  <div class="dropdn dropdn_account {% if onlytext == 1 %}only-text{% endif %}  {{ classes }}">
    <a href="#" class="dropdn-link"><i class="icon icon-person"></i></a>
    <div class="dropdn-content">
      <div class="container">
        <div class="dropdn-close">CLOSE</div>
        <ul>
          <li>
            <a id="customer_login_link" href="javascript:void(0);" data-toggle="ssw-modal" data-target="#login_modal" onclick="trackShopStats('login_popup_view', 'all')">
              <i class="icon icon-lock"></i>
              <span>{{ 'socialshopwave.log_in' | t }}</span>
            </a>
          </li>
          <li>
            <a id="customer_register_link" data-toggle="ssw-modal" data-target="#signup_modal" href="javascript:void(0);" onclick="trackShopStats('login_popup_view', 'all')">
              <i class="icon icon-person-fill-add"></i>
              <span>{{ 'socialshopwave.sign_up' | t }}</span>
            </a>
          </li>  
        </ul>
      </div>
    </div>
  </div>
  {% endif %}

{% endif %}
{% endif %}    

{% endif %}
{% endunless %}



